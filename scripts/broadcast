#!/bin/sh
set -e

go build -o bin/maelstrom-broadcast ./cmd/broadcast/main.go

rm -r ./log/*.txt
./bin/maelstrom/maelstrom test -w broadcast --bin bin/maelstrom-broadcast --node-count 1 --time-limit 20 --rate 10

rm -r ./log/*.txt
./bin/maelstrom/maelstrom test -w broadcast --bin bin/maelstrom-broadcast --node-count 5 --time-limit 20 --rate 10

rm -r ./log/*.txt
./bin/maelstrom/maelstrom test -w broadcast --bin bin/maelstrom-broadcast --node-count 5 --time-limit 20 --rate 10 --nemesis partition
